= link_to "Tesseract", root_path, :class => 'brand'
%ul.nav{:style => "margin-top: 3px;"}
  - if user_signed_in?
    %li
      %a
        Jobs
    %li
      = link_to "Developers"
    %li
      = link_to "Employers"
    %li
      = link_to "My Profile", user_path(current_user.id)
%ul.nav{:style => "float: right;"}
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}}
        - if current_user.current_avatar != nil
          %img{:src => Gravatar.new(current_user.email).image_url, :height => 25, :width => 25, :style => "border: 1px solid grey; margin-right: 5px;"}
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li 
          = link_to "Edit Profile", edit_user_path(current_user.id)
        %li 
          = link_to "Settings", services_path
        %li
          = link_to("Logout", signout_services_path)
  - else 
    %li
      = link_to "Sign In", signin_services_path